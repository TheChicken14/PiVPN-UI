{{> navbar}}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">PiVPN UI</h1>
        <p class="lead">Here's a list of your VPN profiles.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each profiles}}
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this}}</h5>
                    <a href="/api/configs/{{this}}/download" class="btn btn-primary">Download</a>
                    <a href="javascript:void(0)" onclick="deleteConfig('{{this}}')" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Create client</h5>
                    <p class="card-text">Create a client file to connect with</p>
                    <button class="btn btn-outline-primary" onclick="createConfig()">Create {{> addFileIcon}}</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/home.js"></script>

<style>
    .col {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
</style>